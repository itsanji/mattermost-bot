{
    "name": "mattermost-scheduler-bot",
    "version": "1.0.0",
    "description": "A Mattermost bot that sends scheduled messages to specific channels",
    "main": "dist/bot.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/bot.js",
        "dev": "ts-node src/bot.ts",
        "watch": "tsc --watch",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop mattermost-scheduler-bot",
        "pm2:restart": "pm2 restart mattermost-scheduler-bot",
        "pm2:delete": "pm2 delete mattermost-scheduler-bot",
        "pm2:logs": "pm2 logs mattermost-scheduler-bot",
        "pm2:status": "pm2 status"
    },
    "keywords": [
        "mattermost",
        "bot",
        "scheduler",
        "cron"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@mattermost/client": "^9.0.0",
        "@mattermost/types": "^9.0.0",
        "node-cron": "^3.0.3"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/node-cron": "^3.0.11",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
